{
    "name": "fabricity/fabricity",
    "description": "fabricity monorepo",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-xml": "*",
        "symfony/console": "^6.4|^7.0",
        "symfony/dotenv": "^6.4|^7.0",
        "symfony/flex": "^1.17|^2",
        "symfony/dependency-injection": "^6.4|^7.0",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/http-kernel": "^6.4|^7.0",
        "symfony/runtime": "^6.4|^7.0",
        "symfony/twig-bundle": "^6.4|^7.0",
        "symfony/twig-bridge": "^6.4|^7.0",
        "symfony/yaml": "^6.4|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.59",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-doctrine": "^1.4",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpstan/phpstan-symfony": "^1.4",
        "symfony/maker-bundle": "^1.50",
        "symfony/web-profiler-bundle": "^6.4|^7.0",
        "symplify/monorepo-builder": "^11.2"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\Demo\\": "app/demo/src/",
            "Fabricity\\Bundle\\DataGridBundle\\": "src/bundle/data-grid/src"
        }
    },
    "replace": {
        "fabricity/grid-bundle": "self.version",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php81": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "scripts": {
        "monorepo-validate": "monorepo-builder validate --config=config/.monorepo-builder.dist.php",
        "phpall": ["@phpcs", "@phpstan"],
        "phpcs": "php-cs-fixer fix --config=config/.php-cs-fixer.dist.php",
        "phpstan": "phpstan analyze --configuration=config/phpstan.dist.neon",
        "post-install-cmd": [
            "@monorepo-validate"
        ],
        "post-update-cmd": [
            "@monorepo-validate"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*"
        }
    }
}